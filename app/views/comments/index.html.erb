<% if logged_in? %>
  <div class="row">
      <aside class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= current_user.name %></h3>
          </div>
          <div class="card-body">
            <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
          </div>
        </div>
        <h2>自己紹介</h2>
        <p><%= current_user.introduction %></p>
      </aside>
      <div class="col-sm-6">
        <ul class="list-unstyled">
          <% @comments.each do |comment| %>
            <li class="media mb-3">
              <img class="mr-2 rounded" src="<%= gravatar_url(current_user, { size: 50 }) %>" alt="">
              <div class="media-body">
                <div>
                  <%= link_to comment.user.name, user_path(comment.user) %> <span class="text-muted">posted at <%= comment.created_at %></span>
                </div>
              <div>
                  <table class="table table-bordered">
                    <tr>
                      <td><%= comment.content %></td>
                    </tr>
                  </table>
              </div>
            </li>
          <% end %>  
        </ul>
      </div>  
  </div>
<% end %>  
