<div class="row">
  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
    <h2>自己紹介</h2>
    <p><%= current_user.introduction %></p>
    <p>投稿数       :<%= @count_posts %></p>
    <p>いいね数     :<%= @count_favposts %></p>
    <p>フォロー数   :<%= @count_followings %></p>
    <p>フォロワー数 :<%= @count_followers %></p>
  </aside>
  <div class="col-sm-5">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= posts_path %>" class="nav-link <%= 'active' if current_page?(posts_path) %>">投稿一覧  <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="<%= my_index_posts_path %>" class="nav-link">自分の投稿一覧</a></li>
    </ul>
  </div>
  <div class="col-sm-4">
    <%= render 'posts/news', post: @posts %>
  </div>
</div>
