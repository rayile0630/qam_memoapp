<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= current_user.name %></h3>
        </div>
        <div class="card-body">
          <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
        </div>
      </div>
      <h2>自己紹介</h2>
      <p><%= current_user.introduction %></p>
    </aside>
    <div class="col-sm-6">
      <h2>新規投稿</h2>
        <%= form_with(model: @post, local: true) do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: 'form-control', rows: 5 %>
          </div>  
          <div class="form-group">
            <%= f.text_area :qmemo, class: 'form-control', rows: 5 %>
            <%= f.text_area :amemo, class: 'form-control', rows: 5 %>
          </div>
          <div class="form-group">
            <%= f.text_field :address, class: 'form-control', rows: 5 %>
          </div>  
            <!--理解度のチェックボックスが入るenum実装する-->
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
      <div class="col-sm-6">
        <!--後で、一覧入れるか考える-->
      </div>
    </div>
  <% else %>
    <div class="center jumbotron">
      <div class="text-center">
        <h1>QAM</h1>
          <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>    
  <% end %>